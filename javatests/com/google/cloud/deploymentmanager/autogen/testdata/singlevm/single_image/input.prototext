spec {
  single_vm {
    images {
      project: "bitnami-launchpad"
      name: "bitnami-wordpress-4-5-3-1-r16-linux-debian-8-x86-64"
      label: "Wordpress 4.5"
    }
    machine_type {
      default_machine_type {
        gce_machine_type: "f1-micro"
      }
    }
    boot_disk {
      disk_size {
        default_size_gb: 10
        min_size_gb: 10
      }
    }
    local_ssds {
      count_from_deploy_input_field: "localSsdsCount"
    }
    firewall_rules {
      protocol: TCP
      port: "80"
    }
    firewall_rules {
      protocol: TCP
      port: "443"
    }
    site_url {
      scheme: HTTP
    }
    admin_url {
      scheme: HTTP
      path: "wp-admin/"
    }
    passwords {
      metadata_key: "bitnami-base-password"
      length: 8
      username: "user"
    }
    application_status {
      type: WAITER
      waiter {
        waiter_timeout_secs: 480
        script {
          check_timeout_secs: 420
          check_script_content: "failed=$(/etc/init.d/bitnami status \\\n    | grep \"not running\" | cut -d\" \" -f1 | tr \"\\n\" \" \")\nif [ ! -z \"$failed\" ]; then\n  echo \"Processes failed to start: $failed\"\n  exit 1\nfi"
        }
      }
    }
    network_interfaces {
      external_ip {
        default_type: EPHEMERAL
        not_configurable: true
      }
    }
    post_deploy {
      connect_button_label: "Fancy SSH label"
    }
    deploy_input {
      sections {
        placement: MAIN
        fields {
          name: "localSsdsCount"
          title: "Local SSDs"
          integer_box {
            default_value {
              value: 0
            }
            validation {
              min {
                value: 0
              }
              max {
                value: 3
              }
            }
          }
        }
      }
    }
    stackdriver {
      logging {
        default_on: false
      }
    }
  }
}
logo {
  raw {
    content_type: PNG
