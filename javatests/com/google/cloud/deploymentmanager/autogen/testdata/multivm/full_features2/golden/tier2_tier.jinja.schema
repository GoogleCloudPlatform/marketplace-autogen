imports:
  - name: common.py
    path: common/common.py
  - name: default.py
    path: common/default.py
  - name: password.py
    path: common/password.py
  - name: path_utils.jinja
    path: common/path_utils.jinja
  - name: software_status.py
    path: common/software_status.py
  - name: software_status_script.py
    path: common/software_status_script.py
  - name: vm_instance.py
    path: common/vm_instance.py

required:
  - instanceCount
  - zone
  - machineType
  - network
  - bootDiskType
  - bootDiskSizeGb
  - generatedPassword0
  - generatedPassword1
  - main_instanceCount
  - input_domain
  - input_showConditionals

properties:
  instanceCount:
    type: integer
    default: 2
    enum:
      - 1
      - 2
      - 4
  zone:
    type: string
    x-googleProperty:
      type: GCE_ZONE
  machineType:
    type: string
    default: n1-standard-1
    x-googleProperty:
      type: GCE_MACHINE_TYPE
      zoneProperty: zone
      gceMachineType:
        minCpu: 1
        minRamGb: 1.7000000476837158
  acceleratorType:
    type: string
    default: nvidia-tesla-k80
    x-googleProperty:
      type: GCE_GPU_TYPE
      gceGpuType:
        machineTypeProperty: machineType
        gpuType:
          - nvidia-tesla-k80
          - nvidia-tesla-p100
  acceleratorCount:
    type: integer
    default: 2
    minimum: 2
    x-googleProperty:
      type: GCE_GPU_COUNT
      gceGpuCount:
        machineTypeProperty: machineType
  network:
    type: array
    default: [default]
    minItems: 1
    maxItems: 5
    x-googleProperty:
      type: GCE_NETWORK
      gceNetwork:
        allowSharedVpcs: True
        machineTypeProperty: machineType
  subnetwork:
    type: array
    minItems: 1
    maxItems: 5
    x-googleProperty:
      type: GCE_SUBNETWORK
      zoneProperty: zone
      gceSubnetwork:
        networkProperty: network
  externalIP:
    type: array
    default: [EPHEMERAL]
    minItems: 1
    maxItems: 5
    x-googleProperty:
      type: GCE_EXTERNAL_IP
      gceExternalIp:
        networkProperty: network
        notConfigurable: True
        allowStaticIps: True
  bootDiskType:
    type: string
    default: pd-standard
    x-googleProperty:
      type: GCE_DISK_TYPE
      zoneProperty: zone
  bootDiskSizeGb:
    type: integer
    default: 10
    minimum: 10
    maximum: 10000
    x-googleProperty:
      type: GCE_DISK_SIZE
      gceDiskSize:
        diskTypeProperty: bootDiskType
  enableTcp9878:
    type: boolean
    default: True
    x-googleProperty:
      type: GCE_FIREWALL
      gceFirewall:
        networkProperty: network
  enableUdp2555:
    type: boolean
    default: True
    x-googleProperty:
      type: GCE_FIREWALL
      gceFirewall:
        networkProperty: network
  input_domain:
    type: string
    default: google.com
    pattern: '[a-zA-Z0-9-]+.[a-z]{2,}'
  input_showConditionals:
    type: boolean
    default: True
  input_generateOptionalPassword:
    type: boolean
    default: True
  input_tier2LocalSSDs:
    type: integer
    default: 0
    minimum: 0
    maximum: 5
  input_imageCaching:
    type: string
    default: none
    enum:
    - none
    - redis
    - memcached
  input_imageCompression:
    type: boolean
    default: False
  input_imageSizing:
    type: boolean
    default: True
  input_extraLbZone0:
    type: string
    default: us-west1-a
    x-googleProperty:
      type: GCE_ZONE
  input_extraLbZone1:
    type: string
    x-googleProperty:
      type: GCE_ZONE
  generatedPassword0:
    type: string
  generatedPassword1:
    type: string
  generatedPassword2:
    type: string
  main_instanceCount:
    type: integer
  enableStackdriverLogging:
    type: boolean
    default: False
  enableStackdriverMonitoring:
    type: boolean
    default: True
