  {let $field: findDeployInputField($localSsdSpec.getCountFromDeployInputField(), $deployInput)/}
  dynamic "scratch_disk" {lb}
    for_each = range(var.{$field.getName()})
    content {lb}
      interface = "SCSI"
    {rb}
  {rb}
  {\n}
  {else}
  {for $i in range(0, $localSsdSpec.getCount())}
  scratch_disk {lb}
    interface = "SCSI"
  {rb}
  {\n}
  {/for}
  {/if}
{/template}

